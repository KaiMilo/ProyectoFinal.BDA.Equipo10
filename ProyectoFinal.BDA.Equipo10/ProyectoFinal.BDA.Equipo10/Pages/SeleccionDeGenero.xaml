<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.BDA.Equipo10.Pages.SeleccionDeGenero">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center">
            <Label Text="Elige el genero"
                   FontFamily="Baloo2-EB"
                   FontSize="Title"
                   TextColor="Black"/>
            <Button  x:Name="Actrices"
                Text="Actrices"                   
                    FontFamily="Baloo2-Normal"
                    FontSize="Large"
                    FontAttributes="Bold"
                    BackgroundColor="DimGray"
                    TextColor="White"
                    HeightRequest="50"
                    WidthRequest="150"
                    Clicked="Actrices_Clicked"/>
            <Button Text="Actores"                   
                    FontFamily="Baloo2-Normal"
                    FontSize="Large"
                    FontAttributes="Bold"
                    BackgroundColor="DimGray"
                    TextColor="White"
                      HeightRequest="50"
                    WidthRequest="150"
                    Clicked="Actores_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>